package aula1;

import java.util.Scanner;

public class exercicio3 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		/*
		 * 1.3. Faça um sistema que leia o tempo de duração de um evento em uma fábrica
		 * expressa em segundos e mostre-o expresso em horas, minutos e segundos.
		 */

		Scanner sc = new Scanner(System.in);

		System.out.println("Digite quant odurou o evento em segundos:\n ");
		int segundos = sc.nextInt();
		
		int horas = segundos/3600;
		int resthoras = segundos%3600;
		int minutos = resthoras/60;
		int segundo = minutos%60;
		
		System.out.println("Sua idade em horas é " + horas);
		System.out.println("Sua idade em minutos é " + minutos);
		System.out.println("Sua idade em segundos é " + segundo);
		
		
	}

}
